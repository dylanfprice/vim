{
  "coc.preferences.formatOnSave": true,
  "diagnostic.autoRefresh": true,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.messageDelay": 750,
  "diagnostic.level": "warning",
  "hover.target": "preview",
  "signature.hideOnTextChange": true,
  "suggest.minTriggerInputLength": 3,
  "list.insertMappings": {
    "<Up>": "do:previous",
    "<Down>": "do:next",
    "<C-n>": "do:togglemode"
  },
  "outline.sortBy": "position",
  "outline.expandLevel": 0,
  "outline.autoWidth": true,
  "tree.key.selectNext": "<C-n>",
  "tree.key.selectPrevious": "<C-p>",
  // javascript
  "eslint.run": "onSave",
  "eslint.autoFixOnSave": true,
  "javascript.suggestionActions.enabled": false,
  // python
  "python.formatting.provider": "ruff",
  "python.linting.ruffEnabled": true,
}
